<h1>All our articles</h1>

<%= link_to "Add a new article", new_article_path %>
<br/><br/>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article|%>
    <tr>
    <td> <%=article.title%></td>
    <td> <%=article.description%></td>
    <td> <%= link_to "Show", article_path([article.id]) %>
         <%= link_to "Edit", edit_article_path([article.id]) %>
         <%# link_to "Delete", destroy_article_path([article.id]) %>
    </td>
    </tr>
  <%end%>  
  
</table>